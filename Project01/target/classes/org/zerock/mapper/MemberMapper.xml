<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">
	  <select id="getList" resultType="org.zerock.domain.MemberVO">
	  	<![CDATA[select*from notice where idNumber>0]]>
	  </select>
	  
	  <insert id="insert">
	  	insert into student (idNumber,password,name, department,enrolmentStatus,degreeClassification,address,phoneNumber,emailAddress) 
	  	values(#{idNumber},#{password},#{name},#{department},#{enrolmentStatus},#{degreeClassification},#{address},#{phoneNumber},#{emailAddress})
	  </insert>
	  <insert id="insertSelectKey">
	  	<selectKey keyProperty="idNumber" order="BEFORE" resultType="long">
	  		select max(idNumber)+1 idNumber from notice
	  	</selectKey>	  	
	  	insert into student (idNumber, name, department,enrolmentStatus,degreeClassification,address,phoneNumber,emailAddress)
	  	values(#{idNumber},#{password},#{name},#{department},#{enrolmentStatus},#{degreeClassification},#{address},#{phoneNumber},#{emailAddress})
	  </insert>
</mapper>